<h1>Edit: <%= @figure.name %></h1>
<form method="POST" action="/figures/<%= @figure.id %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
  <br><br>

  <label>Title(s): </label>
  <br>
  <label>Choose from an Existing Title</label>
  <br>
  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %>
    <br>
  <% end %>
  <br>
  <label>and/or Create a New Title:</label>
  <br>
  <label>Title:</label>
  <br>
  <input type="text" id="new_title" name="title[name]">
  <br><br>

  <label>Landmark(s):</label>
  <br>
  <label>Choose from an Existing Landmark</label>
  <br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    <br>
  <% end %>
  <br>
  <label>and/or Create a New Landmark:</label>
  <br>
  <label>Landmark:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <br><br>

  <input type="submit" value="Edit Figure">
</form>